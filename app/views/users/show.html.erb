<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Type:</strong>
  <%= @user.user_type %>
</p>

<p>
  <strong>Reputation:</strong>
  <%= @user.reputation %>
</p>

<h2>Courses</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course_path(course)%></td>
        <td><%= course.time %></td>
        <td><%= course.section %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
