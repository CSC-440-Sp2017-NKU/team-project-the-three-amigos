<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= flash[:recaptcha_error] %>

  <div class="form-group">
  	<%= f.label :email %>
  	<%= f.email_field :email, :placeholder => "Enter email", autofocus: true, class: "form-control", required: true %>
  </div>

  <div class="form-group">
  	<%= f.label :password %>
  	<%= f.password_field :password, :placeholder => "Enter password", class: "form-control", required: true %>
  </div>

  <div class="checkbox">
  	<label>
  	<%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> Remember Me
		</label>
  </div>

  <%= recaptcha_tags %><br>

  <div class="form-group">
  	<%= f.submit "Sign In", class: "btn btn-custom" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>