<p id="notice"><%= notice %></p>

<h1>Listing Forums</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.topic %></td>
        <td><%= link_to 'Show', forum %></td>
        <%# Here would be the check for if the current_user is an admin and display the corresponding links %>
        <% if forum.user == current_user %>
          <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
          <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>
