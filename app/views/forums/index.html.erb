<p id="notice"><%= notice %></p>
<center>
<table>
  <thead>
    <tr>
      <th>Forums</th>
      <th colspan="6"><%= link_to 'Add Forum', new_forum_path%></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td id="attribute"><%= link_to forum.topic, forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Delete', forum, method: :delete, data: { confirm: 'Are you sure you want to delete this forum?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</center>



