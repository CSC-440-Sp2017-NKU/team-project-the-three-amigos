<%= form_for(@forum) do |f| %>
  <% if @forum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum.errors.count, "error") %> prohibited this forum from being saved:</h2>

      <ul>
      <% @forum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :topic %><br>
    <%= f.text_field :topic, placeholder: "Enter forum topic", autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group">
      <ul class="pager">
        <%= f.submit "Add Forum", class: "btn btn-custom" %>
        <li class="next"><%= link_to 'Back', forums_path %></li>
      </ul>
  </div>
<% end %>
